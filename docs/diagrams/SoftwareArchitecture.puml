ConsoleInterface -left-> ConsoleParser
ConsoleInterface -down-> ExpenseManager
ConsoleInterface -down-> CategoryManager
ConsoleInterface -down-> IncomeManager
ConsoleInterface -down-> TargetManager
ConsoleInterface -down-> RecurringPaymentManager
ConsoleInterface -down-> CurrencyManager
ConsoleInterface -right-> LocalLogger

ConsoleParser -down-> ConsoleParserConfigurations

ExpenseManager -down-> LocalStorage

CategoryManager -down-> LocalStorage

IncomeManager -down-> LocalStorage

TargetManager -down-> LocalStorage

RecurringPaymentManager -down-> LocalStorage

CurrencyManager -down-> LocalStorage

