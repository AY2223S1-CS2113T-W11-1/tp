@startuml
!include <office/Concepts/globe_internet>
!include <office/Concepts/documents>
!include <office/Users/user>
!include https://raw.githubusercontent.com/xzynos/tp/branch-MoneyGoWhere-Webpage/docs/diagrams/styles.puml

Package " "<<Rectangle>>{
    Class MoneyGoWhere MONEYGOWHERE_COLOR_1

    Class Messages COMMON_COLOR_1
    Class Configurations COMMON_COLOR_1

    Class ConsoleInterface USER_INTERFACE_COLOR_1

    Class ConsoleParser PARSER_COLOR_1
    Class ConsoleParserConfigurations PARSER_COLOR_2

    Class ExpenseManager DATA_COLOR_1
    Class CategoryManager DATA_COLOR_2
    Class IncomeManager DATA_COLOR_3
    Class TargetManager DATA_COLOR_4
    Class RecurringPaymentManager DATA_COLOR_5
    Class CurrencyManager DATA_COLOR_6

    Class LocalStorage STORAGE_COLOR_1

    Class LocalLogger LOGGER_COLOR_1
